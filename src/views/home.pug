doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Node-zoom
    link.css(rel="stylesheet", href="https://unpkg.com/mvp.css")
  body 
    header
      h1 Node Zoom
    main
      form(id="nameForm")
        input(type="text", id="nameInput", placeholder="Write a Nickname", required)
        button(id="nameBtn") Enter
      ul
      form(id="chatForm")
        input(type="text", id="chatInput", placeholder="Write a Message", required)
        button(id="chatBtn") Send
    script(src="/public/js/app.js")