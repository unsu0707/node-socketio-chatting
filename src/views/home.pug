doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Node-zoom
    link.css(rel="stylesheet", href="https://unpkg.com/mvp.css")
  body 
    header
      h1 Node Chat
    main
      div#welcome
        form
          input#nickname(placeholder="nickname", required, type="text")
          input#roomname(placeholder="room name", required, type="text")
          button Enter Room
      div#chat
        h3
        ul
        form
          input(placeholder="write a message", required, type="text")
          button Chat

    script(src="/socket.io/socket.io.js")
    script(src="/public/js/app.js")